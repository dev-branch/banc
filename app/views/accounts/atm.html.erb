<h1 class="display-4">ATM for <%= @account.name %></h1>

<div class="row">
    <div class="col">
        <% if @account.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@account.errors.count, "error") %> prohibited this movie from being saved:</h2>
            
              <ul>
              <% @account.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
        <% end %>
    </div>
</div>

<div class="row">

    <div class="col-3">
        <%= form_with(url: deposit_account_path(@account), local: true, method: 'post') do |form| %>
            <div class="form-group">
                <%= form.label :amount %>
                <%= form.text_field :amount, id: :amount, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= form.submit 'Deposit', class: 'btn btn-success' %>
            </div>
        <% end %>
    </div>
    
    <div class="col-3">
        <%= form_with(url: withdraw_account_path(@account), local: true, method: 'post') do |form| %>
            <div class="form-group">
                <%= form.label :amount %>
                <%= form.text_field :amount, id: :amount, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= form.submit 'Withdraw', class: 'btn btn-danger' %>
            </div>
        <% end %>
    </div>

    <div class="col-3">
        <%= form_with(url: clear_account_path(@account), local: true, method: 'post') do |form| %>
            <div class="form-group">
                <%= form.submit 'Clear', class: 'btn btn-warning' %>
            </div>
        <% end %>
    </div>
    
    <div class="col-3"></div>

</div>
