<h1 class="display-4">Account Transactions for <%= @account.name %></h1>

<table class="table table-striped">
    <thead class="thead-inverse">
        <tr>
            <th>Id</th>
            <th>Amount</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        <% @account.transactions.each do |t| %>
            <tr>
                <td><%= t.id %></td>
                <td><%= number_to_currency t.amount %></td>
                <td><%= t.category %></td>
            </tr>
        <% end %>
    </tbody>
</table>
